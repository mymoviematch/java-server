<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss,SSS} [%t] %-5p %c %l - %m%n" />
        </layout>
    </appender>

    <appender name="file-all" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="server.log"/>
        <param name="Append" value="true" />
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="activeFileName" value="server.log"/>
            <param name="fileNamePattern" value="server-%d{yyyy-MM-dd}.log" />
            <!-- For hourly rotation change to below: -->
            <!--<param name="fileNamePattern" value="server.%d{yyyy-MM-dd.HH}.log" />-->
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss,SSS} [%t] %-5p %c - %m%n" />
        </layout>
    </appender>

    <appender name="file-db" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="db.log"/>
        <param name="Append" value="true" />
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="activeFileName" value="db.log"/>
            <param name="fileNamePattern" value="db-%d{yyyy-MM-dd}.log" />
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss,SSS} [%t] %-5p %c - %m%n" />
        </layout>
    </appender>

    <appender name="file-web" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="web.log"/>
        <param name="Append" value="true" />
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="activeFileName" value="web.log"/>
            <param name="fileNamePattern" value="web-%d{yyyy-MM-dd}.log" />
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss,SSS} [%t] %-5p %c - %m%n" />
        </layout>
    </appender>

    <logger name="java.sql" additivity="false">
        <level value="trace"/>
        <appender-ref ref="file-db" />
    </logger>

    <logger name="org.apache.ibatis" additivity="false">
        <level value="trace"/>
        <appender-ref ref="file-db" />
    </logger>

    <logger name="org.flywaydb" additivity="false">
        <level value="trace"/>
        <appender-ref ref="file-db" />
    </logger>

    <logger name="org.tchorworks.db" additivity="false">
        <level value="trace"/>
        <appender-ref ref="file-db" />
    </logger>

    <logger name="org.tchorworks.web" additivity="false">
        <level value="trace"/>
        <appender-ref ref="file-web" />
    </logger>

    <root>
        <level value="trace" />
        <appender-ref ref="file-all" />
    </root>

</log4j:configuration>